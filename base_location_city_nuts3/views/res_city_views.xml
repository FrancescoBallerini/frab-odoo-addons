<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_city_tree_inherit" model="ir.ui.view">
        <field name="model">res.city</field>
        <field name="inherit_id" ref="base_address_city.view_city_tree" />
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="nuts3_id" string="Region" optional="Hide" />
                <field name="allowed_nut_ids" invisible="1" />
            </tree>
        </field>
    </record>

    <record id="view_city_form" model="ir.ui.view">
        <field name="model">res.city</field>
        <field name="inherit_id" ref="base_location.view_city_form" />
        <field name="arch" type="xml">
            <field name="state_id" position="after">
                <field name="nuts3_id" string="Region" optional="Hide" />
                <field name="allowed_nut_ids" invisible="1" />
            </field>
        </field>
    </record>

</odoo>

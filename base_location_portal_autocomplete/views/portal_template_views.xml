<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template
        id="portal_my_details_location_autocomplete"
        inherit_id="portal.portal_my_details"
        name="Portal Details Location Autocomplete"
    >

        <!-- Add selector to load widget portalZipcodeAutocomplete -->
        <xpath expr="//form" position="attributes">
            <attribute name="class" add="portal_zipcode_autocomplete" separator=" " />
        </xpath>

        <!-- Add selector to catch submit event -->
        <xpath expr="//form//button[@type='submit']" position="attributes">
            <attribute name="class" add="portal_form_submit" separator=" " />
        </xpath>

    </template>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_details_location_autocomplete" inherit_id="portal.portal_my_details"
              name="Portal Details Location Autocomplete">

        <!-- Add selector to load widget portalZipcodeAutocomplete -->
        <xpath expr="//form" position="attributes">
            <attribute name="class" add="portal_zipcode_autocomplete" separator=" "/>
        </xpath>

        <!-- Add selector to catch click on submit.
        We don't need to specifically extend _onSubmit ev handler: we can make queries on a normal click ev -->
        <xpath expr="//form//button[@type='submit']" position="attributes">
            <attribute name="class" add="submit_autocomplete" separator=" "/>
        </xpath>

        <!-- Add selector to catch country_id select change ev.
        We will need to reload source and rebuild autocomplete in this case -->
        <xpath expr="//form//select[@name='country_id']" position="attributes">
            <attribute name="t-attf-class" add="country_select_change" separator=" "/>
        </xpath>

    </template>
</odoo>
